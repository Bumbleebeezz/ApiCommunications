<Window x:Class="Labb2_DbFirstWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb2_DbFirstWPF"
        mc:Ignorable="d"
        Title="Bee´z Book Shop" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Image Source="Images/icon_bookshop.png" Margin="5"></Image>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="5">
            <Button >Science Fiction Bokhandeln</Button>
            <Button >Akademibokhandeln</Button>
            <Button >Pocket Shop</Button>
            <Button >Bokus</Button>
        </StackPanel>
    </Grid>
</Window>
